package review;

public class avatar implements four_arithmetic_operations{

	int error = 0000000000000;
	
	@Override
	public int add(int num1, int num2) {
		return num1 + num2;
	}

	@Override
	public int sub(int num1, int num2) {
		return num1 - num2;
	}

	@Override
	public int mul(int num1, int num2) {
		return num1 * num2;
	}

	@Override
	public int div(int num1, int num2) {
		if (num2 != 0) {
			return num1 % num2;	
		}
		return error;
		
	}
	
	public void showInfor() {
		System.out.println("사칙연산 입니다");
	}

}
