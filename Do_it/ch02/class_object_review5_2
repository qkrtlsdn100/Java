package review;

public class Taxi {
	
	String taxiNumber;
	int money;
	int geustNumber;
	
	public Taxi(String taxiNum) {
		this.taxiNumber = taxiNum;
		
	}
	
	public void take(int money) {
		this.money += money;
		geustNumber++;
		
	}
	
	public void showtaxiinfor() {
		System.out.println(taxiNumber + "번 택시의 수입은 " + money + "원 이고, 손님은 " + geustNumber + "명 입니다");
		
	}
	
}
