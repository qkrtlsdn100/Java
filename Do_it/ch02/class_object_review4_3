package review;

public class Bus {
	
	String busNumber;
	int passengerCount;
	int money;
	
	public Bus(String busNum) {
		this.busNumber = busNum;
		
	}
	
	public void take(int money) {
		this.money += money;
		passengerCount++;
		
	}
	
	public void showinfor() {
		System.out.println("버스 " + busNumber + "번의 승객은 " + passengerCount + "이며, 수입은 " + money + "입니다");
	}
}
